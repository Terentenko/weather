<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#20656464"
    app:cardCornerRadius="9dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="-"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textTitleMinT"

            app:layout_constraintStart_toEndOf="@+id/image_weather"
            app:layout_constraintTop_toTopOf="@+id/text_max_t"
            app:layout_constraintVertical_bias="0.583" />

        <TextView
            android:id="@+id/text_value_max_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="8"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="-"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textv_value_man_t"
            app:layout_constraintStart_toEndOf="@+id/text_max_t"
            app:layout_constraintTop_toTopOf="@+id/text_max_t" />

        <TextView
            android:id="@+id/textv_value_man_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="8"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="-"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textTitleMinT"
            app:layout_constraintStart_toEndOf="@+id/textTitleMinT"
            app:layout_constraintTop_toBottomOf="@+id/text_value_max_t" />

        <TextView
            android:id="@+id/textValueProcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:maxLength="6"
            android:text="-"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textv_value_man_t"
            app:layout_constraintEnd_toStartOf="@+id/textTitleProcent"
            app:layout_constraintTop_toTopOf="@+id/text_value_max_t" />

        <TextView
            android:id="@+id/textTitleProcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxLength="6"
            android:text="-"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textv_value_man_t"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_value_max_t"
            app:layout_constraintVertical_bias="0.518" />

        <TextView
            android:id="@+id/text_max_t"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="2dp"
            android:text="max t"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textTitleMinT"
            app:layout_constraintEnd_toEndOf="@+id/textTitleMinT"
            app:layout_constraintStart_toStartOf="@+id/textTitleMinT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textTitleMinT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="2dp"
            android:text="min  t   "
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textv_value_man_t"
            app:layout_constraintStart_toEndOf="@+id/text_date"
            app:layout_constraintTop_toBottomOf="@+id/text_max_t" />

        <ImageView
            android:id="@+id/image_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_date"
            app:srcCompat="@drawable/ic_default_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>